    match /ranking/{userId} {
      allow read: if true; // pÃºblica
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ—¨ï¸ Mensajes (si lo usÃ¡s)
    match /salas/{codigo}/mensajes/{docId} {
